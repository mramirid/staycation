<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Price</th>
            <th>Location</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% properties.forEach((property, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= property.title %></td>
            <td><%= format.toUSD(property.price) %></td>
            <td><%= property.city %>, <%= property.country %></td>
            <td>
              <a href="/admin/properties/<%= property.id %>/images" class="btn btn-info btn-circle btn-sm">
                <i class="fas fa-image"></i>
              </a>
              <a href="/admin/properties/<%= property.id %>/edit" class="btn btn-warning btn-circle btn-sm">
                <i class="fas fa-edit"></i>
              </a>
              <form method="post" action="/admin/properties/<%= property.id %>?_method=DELETE" class="d-inline">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" type="button" class="btn btn-danger btn-circle btn-sm">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
              <a href="/admin/properties/<%= property.id %>/addons" class="btn btn-success btn-circle btn-sm">
                <i class="fas fa-plus"></i>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>