<%- include('../../../partials/header.ejs') %>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("../../../partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include("../../../partials/navbar.ejs") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <%- include('../../../partials/alert.ejs') %>

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800"><%= `${pageTitle} - ${property?.title}` %></h1>

          <% if (_.isObject(property)) { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="features-tab" data-toggle="tab" href="#features" role="tab"
                aria-controls="features" aria-selected="true">
                Features
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="activities-tab" data-toggle="tab" href="#activities" role="tab"
                aria-controls="activities" aria-selected="false">
                Activities
              </a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="features" role="tabpanel" aria-labelledby="features-tab">
              <%- include('./features/tab-content.ejs', { tableId: "featureDataTable" }) %>
            </div>
            <div class="tab-pane fade" id="activities" role="tabpanel" aria-labelledby="activities-tab">
              <%- include('./activities/tab-content.ejs', { tableId: "activityDataTable" }) %>
            </div>
          </div>
          <% } %>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <%- include('../../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->
</body>

<%- include("../../../partials/utilities.ejs") %>
<%- include("../../../partials/scripts/common.ejs") %>

<script defer>
  $(document).ready(() => {
    $("#featureDataTable").DataTable();
    $("#activityDataTable").DataTable();
  });
</script>