<%- include('../../../partials/header.ejs') %>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("../../../partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%- include("../../../partials/navbar.ejs") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <%- include('../../../partials/alert.ejs') %>

          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800"><%= `${pageTitle} - ${property?.title}` %></h1>

          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="images-tab" data-toggle="tab" href="#images" role="tab"
                aria-controls="images" aria-selected="true">
                Images
              </a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active py-2" id="images" role="tabpanel" aria-labelledby="images-tab">
              <ul class="list-unstyled row gx-5">
                <% property?.imageUrls.forEach((imageUrl, i) => { %>
                <li class="col-md-4">
                  <img src="<%= imageUrl %>" alt="Image <%= i + 1 %>" class="img-fluid img-thumbnail" />
                </li>
                <% }) %>
              </ul>
              <a href="/admin/properties" class="btn btn-light mb-2">
                <i class="fas fa-arrow-left"></i> <span class="ml-1">Back</span>
              </a>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <%- include('../../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->
</body>

<%- include("../../../partials/utilities.ejs") %>
<%- include("../../../partials/scripts/common.ejs") %>